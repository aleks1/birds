$('.profile-birds-block .profile-birds-container').empty().append("<%= escape_javascript( render partial: 'profiles/bird', collection: @birds, as: :bird ) %>");
$('.profile-birds-block .birds-pagination').html('<%= escape_javascript(paginate(@birds, :remote => true, :param_name => 'page_birds').to_s) %>');

$('.comments-container').empty().append("<%= escape_javascript( render partial: 'profiles/comments' ) %>");
$('.comments-pagination').html('<%= escape_javascript(paginate(@comments, :remote => true, :param_name => 'page_comments').to_s) %>');
