.col-sm-6.col-md-3.home-img-block
  .head
    .blck
      =image_tag 'share/bird_logo.png'
    - if bird.species.present?
      .blck
        =link_to bird.species.name_ru, species_path(bird.species)
  .body
    =link_to bird_path(bird) do
      =image_tag bird.photo.small.url
  .foot
    .blck
      =image_tag bird.user.avatar.thumb.url, class: 'img-circle'
    .blck
      =link_to bird.user.full_name, user_profile_path(bird.user)
      %p=date_format(bird.timestamp)
