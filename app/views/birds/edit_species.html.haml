    .row.mtop40.add-photo-container
      .col-md-9.col-sm-12
        = form_for @bird do |form|
          .form-container
            #selectBird.selectBox.sm-width-max.dropdown
              %button#dropdownMenu.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
                Выберете вид птицы
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                -@families.each_with_index do |family, index|
                  %li{:role => "presentation"}
                    -unless index == 0
                      .div-contain
                        .divider
                    %dt
                      %span.text=family.name_ru
                  -family.main_species.each do |sp|
                    %li{:role => "presentation"}
                      =link_to sp.name_ru, '#', role: 'menuitem', class: 'species-item', tabindex: '-1', data: {id: sp.id}
            .hidden{ style: 'display:none'}
              =form.text_field :species_id, id: 'set-bird-species-id', value: ''
            =form.submit 'Опубликовать фотографию', class: 'fright btn btn-info sm-display-none'
            =form.submit 'Опубликовать фотографию', class: 'mtop3 m-h35 mbtm20 sm-width-max btn btn-info display-sm-only'

      .col-md-3.acenter.sm-display-none
        =render 'birds/photo_info', bird: @bird
