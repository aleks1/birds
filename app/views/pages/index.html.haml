.bg-container.homepage-container
  = render 'shared/contests'

  .container.content
    = render 'shared/nav_add_photo'

    .for-banner

    .row.tabs
      %ul.nav.nav-tabs
        %li.active
          %a{"data-toggle" => "tab", :href => "#current"} Определенные
        %li
          %a{"data-toggle" => "tab", :href => "#commentable"} Комментируемые
        %li
          %a{"data-toggle" => "tab", :href => "#photo-big-day"} Фото Большой День

    .tab-content
      #current.tab-pane.fade.in.active
        .mtop40.home-img-container.current-container
          - @birds.each_slice(4) do |row|
            .row.row-sm= render partial: 'birds/photo', collection: row, as: :bird
        .row.acenter
          =link_to 'Показать еще фотографии', root_path, data: {count: PagesController::PHOTO_COUNT_PER_PAGE}, class: 'btn btn-success btn-xlg sm-width-max', id: 'show-more-photo'

      #commentable.tab-pane.fade
        .mtop40.home-img-container.commentable-container
          - @commented_birds.each_slice(4) do |row|
            .row.row-sm= render partial: 'birds/photo', collection: row, as: :bird
        - if @commented_birds &&  !@commented_birds.last_page?
          .row.acenter#commentable-show-more
            = link_to 'Показать еще фотографии', show_commentable_pages_path(page: @commented_birds.current_page + 1), class: 'btn btn-success btn-xlg sm-width-max'

      #photo-big-day.tab-pane.fade
        .mtop40.photo-big-day-container
          %p
            Соревнование по фотобердингу -
            = link_to '«ФОТО Большой День»', big_day_photo_contest_path
          %p
            .row.user-block.mbtm15
              %p
                .col-md-4
                  Участники
                .col-md-3
                  Виды
                .col-md-3
                  Подтвержденные виды
            - index = 1
            -@photo_bd_users.each do |user|
              .row.user-block
                %p
                  .col-md-4
                    ="#{index}."
                    =link_to "#{user.first_name} #{user.last_name}", profile_path(user.id)
                    -index += 1
                  .col-md-3
                    =user.species_count
                  .col-md-3
                    =user.approved_species_count || 0

  .posters
    .row.container
      .col.col-md-4
        .help-menu-item
          .icon= image_tag "menus/birdwatch.png"
          %p
            Стань
            = link_to 'бёрдвотчером', birding_rules_pages_path
            и открой для себя мир птиц!
      .col.col-md-4
        .help-menu-item
          .icon= image_tag "menus/tracks.png"
          %p
            = link_to 'Внеси свой вклад', about_pages_path
            в изучение и сохранение птиц Узбекистана!
      .col.col-md-4
        .help-menu-item
          .icon= image_tag "menus/photo.png"
          %p
            Фотографируй и принимай участие в
            = link_to 'Большом годе!', big_year_pages_path

  .bottom-links
    .row
      .col.col-md-4
        .links-list
          %p Птицы
          %ul
            %li= link_to 'Список видов', categories_path
            %li= link_to 'Поиск', search_search_path
            %li= link_to 'Правила наблюдения', birding_rules_pages_path
      .col.col-md-4
        .links-list
          %p Участвуй
          %ul
            %li= link_to 'Большой Год', big_year_pages_path
            %li= link_to 'На определение', unknowns_pages_path
            -if current_user.try(:expert?)
              %li= link_to 'Одобрить', approve_pages_path
            %li= link_to 'Фото Большой день', big_day_photo_contest_path
            %li= link_to 'Лучшая фотография', best_photo_contest_path
            %li= link_to 'Лучший друг birds.uz', our_friend_contest_path
      .col.col-md-4
        .links-list
          %p Инфо
          %ul
            %li= link_to 'О проекте', about_pages_path
            %li= link_to 'Наши пользователи', users_path
            %li= link_to 'Помощь', help_pages_path
            %li= mail_to 'khalex@bk.ru', 'Написать нам'
